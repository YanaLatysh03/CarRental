
@{
    ViewData["Title"] = "AddingDealer";
    ViewData["ActivePage"] = "ADD DEALER";
}

<link rel="stylesheet" href="~/css/AddingDealer.css" />

<form method="post" asp-controller="User" asp-action="AddDealer">
    <div class="form-group">
        <label for="formGroupExampleInput">Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email">
    </div>
    <div class="btn-group">
        <input class="btn btn-primary" type="submit" value="ADD" />
    </div>
</form>

@if (TempData["AddDealer"] is true)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        Success! You added dealer.
    </div>
}
@if (TempData["AddDealer"] is false)
{
    <div class="alert alert-info alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        User is not registered!
    </div>
}

