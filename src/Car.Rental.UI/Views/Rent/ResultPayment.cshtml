</style>
<div class="inside">
    <h1>PAYMENT RESULT</h1>
    <h2>SUCCESS</h2>
    <h3>YOU SUCCESSFULLY RENTED THE CAR</h3>
</div>

<script>
    let country = localStorage.getItem("country");
    let city = localStorage.getItem("city");
    let street = localStorage.getItem("street");
    let house = localStorage.getItem("house");
    let building = localStorage.getItem("building");
    let appartment = localStorage.getItem("appartment");
    let carId = localStorage.getItem("carId");
    let dateFrom = localStorage.getItem("dateFrom");
    let dateTo = localStorage.getItem("dateTo");

    const data = {
        country: country,
        city: city,
        street: street,
        house: house,
        building: building,
        appartment: appartment,
        carId: carId,
        dateFrom: dateFrom,
        dateTo: dateTo
    }

    async function addRent() {
        const response = await fetch("https://localhost:5001/Rent/AddRent", {
            method: 'POST',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data),
        });
    }
    
    if ("@ViewData["resultPayment"]" == "true"){
        
        addRent();
    }
    
</script>

