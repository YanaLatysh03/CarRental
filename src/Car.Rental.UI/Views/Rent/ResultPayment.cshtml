
@{
    ViewData["Title"] = "ResultPayment";
}
<style>
    .pb-3, .py-3 {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .inside {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #51c37e33;
